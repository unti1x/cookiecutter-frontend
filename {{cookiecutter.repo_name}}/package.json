{
  "name": "{{cookiecutter.project_name}}",
  "version": "{{cookiecutter.version}}",
  "description": "{{cookiecutter.description}}",
  "repository": "",
  "main": "dist/scripts/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "gulper build default",
    "release": "NODE_ENV=prod gulp build_release"
  },
  "author": "{{cookiecutter.author}}",
  "license": "{{cookiecutter.license}}",
  "dependencies": {},
  "devDependencies": {
    "gulp": "^4.0.0",
    "gulp-coffee": "^3.0.2",

    {% if cookiecutter.template_engine == "less" -%}
    "gulp-less": "^4.0.0",
    {% elif cookiecutter.style_engine == "scss" -%}
    "gulp-sass": "^4.0.1",
    {%- endif %}

    {% if cookiecutter.template_engine == "haml" -%}
    "gulp-haml": "^1.0.1",
    {% elif cookiecutter.template_engine == "twig" -%}
    "gulp-twig": "^1.2.0",
    {% elif cookiecutter.template_engine == "pug" -%}
    "gulp-pug": "^4.0.1",
